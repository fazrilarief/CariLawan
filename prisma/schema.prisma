generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  nickname String @unique
  email    String @unique
  password String
  phone    String @unique

  // Relation to Teams
  Team Teams?
}

model Teams {
  id       Int    @id @default(autoincrement())
  teamName String
  img_url  String

  // Relation to Users
  Users   Users? @relation(fields: [usersId], references: [id])
  usersId Int?   @unique

  // Relation to Players
  Player Players[]
}

model Players {
  id       Int    @id @default(autoincrement())
  name     String
  position String
  age      Int
  imageUrl String

  // Relation to Teams
  Team    Teams? @relation(fields: [teamsId], references: [id])
  teamsId Int?
}
