generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  nickname  String   @unique
  email     String   @unique
  password  String
  phone     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to Teams
  Team Teams?
}

model Teams {
  id        Int      @id @default(autoincrement())
  teamName  String
  img_url   String?
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to Users
  Users   Users? @relation(fields: [usersId], references: [id])
  usersId Int?   @unique

  // Relation to Players
  Player Players[]

  // Relation to Historys
  Historys Historys[]
}

model Players {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  age       Int
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to Teams
  Team    Teams? @relation(fields: [teamsId], references: [id])
  teamsId Int?
}

model Historys {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  editedAt  DateTime @updatedAt

  // Relation to Teams
  Teams   Teams? @relation(fields: [teamsId], references: [id])
  teamsId Int?
}
